<aura:component controller="AwesomeProductController">  
    <aura:attribute name="product" type="Lightning_Product__c" default="{'sobjectType': 'Lightning_Product__c'}"/>
    <aura:attribute name="products" type="Lightning_Product__c[]"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <aura:registerEvent name="addToCartEvent" type="c:AddToCart"/>

    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-4 col-sm-5">
                <div class="well">
                    <div class="btn-group btn-group-cart">
                        <select onchange="{!c.change}">
                            <aura:iteration items="{!v.products}" var="p">
                                <option>{!p.Name}</option>
                            </aura:iteration>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container main-container">
        <div class="row">
          <div class="col-lg-3 col-md-3 col-sm-12">

        <div class="col-lg-12 col-md-12 col-sm-12">
          <div class="no-padding">
                  <span class="title">{!v.product.Name}</span>
                </div>
                    <div class="thumbnail col-lg-12 col-md-12 col-sm-6 text-center">
                      <a href="detail.html" class="link-p">
                                <img src="{!v.product.getsfpractice__Photo__c}" alt=""/>
                      </a>
                        <div class="caption prod-caption">
                            <p>{!v.product.getsfpractice__Description__c}</p>
                            <p>
                              <div class="btn-group">
                                <a href="#" class="btn btn-default">{!v.product.getsfpractice__Points__c} pts</a>
                                <a href="#" onclick="{!c.addToCart}" class="btn btn-primary"><i class="fa fa-shopping-cart"></i> Add</a>
                              </div>
                            </p>
                        </div>
                    </div>
        </div>

          </div>

          <div class="clearfix visible-sm"></div>

            <c:ShoppingCart />

            <c:MessageArea />

        </div>
  </div>
</aura:component>